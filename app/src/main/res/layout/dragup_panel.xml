<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#f7f7f7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_fileName="visual.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<TextView
    android:id="@+id/duration"
    android:layout_margin="12dp"
    android:textSize="20dp"
    android:textColor="#2e8b42"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""/>
            <TextView
                android:layout_toRightOf="@id/duration"
                android:id="@+id/distance"
                android:layout_margin="12dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
            android:layout_below="@id/distance"
            android:layout_marginTop="-12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fastest route,then usual traffic"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <include layout="@layout/dragup_list_recycler"></include>
</LinearLayout>

</RelativeLayout>